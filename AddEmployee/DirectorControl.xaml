<UserControl x:Class="AddEmployee.DirectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddEmployee"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  Text="Ставка %"     Grid.Column="0" Grid.Row="0"/>
        <TextBox    x:Name="coefSalaryTB"    Grid.Column="1" Grid.Row="0"/>
        <TextBlock  Text="Минимальная ЗП"     Grid.Column="0" Grid.Row="1"/>
        <TextBox    x:Name="lowSalaryTB"       Grid.Column="1" Grid.Row="1"/>
    </Grid></UserControl>
